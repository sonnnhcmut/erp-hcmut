<% content_for :title do %>
    <%= t('.edit') %>
<% end %>

<% content_for :page_title do %>    
    <a href="<%= erp_articles.backend_articles_path %>">
    <i class="fa fa-archive"></i> <%= t('.articles') %>
    </a> / <%= t('.edit') %>
<% end %>

<% if can? :create, Erp::Articles::Article %>
    <% content_for :page_toolbar do %>
        <%= erp_component('button/create', {
            text: t('.create'),
            href: erp_articles.new_backend_article_path,
            class: 'btn-noborder'
        }) %>
    <% end %>
<% end %>

<div class="row">
    <div class="col-md-12">
        <% if @article.errors.any? %>
            <%= erp_form_control("form_error_message") %>
        <% end %>
        
        <!-- BEGIN SAMPLE FORM PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-body">
                <%= render 'form', article: @article %>
            </div>
        </div>
        <!-- END SAMPLE FORM PORTLET-->
    </div>
</div>