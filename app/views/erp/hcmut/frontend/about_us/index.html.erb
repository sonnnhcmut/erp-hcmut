<!-- Section: inner-header -->
<section class="inner-header divider parallax layer-overlay overlay-dark-5" data-bg-img="/hcmut/images/bg/slide1.jpg">
    <div class="container pt-70 pb-20">
        <!-- Section Content -->
        <div class="section-content">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="title text-white">GIỚI THIỆU</h1>
                    <ol class="breadcrumb text-left text-black mt-10">
                        <li><%= link_to 'Trang Chủ', erp_hcmut.root_path %></li>
                        <li class="active text-gray-silver">Giới Thiệu</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Section: Blog -->
<section>
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <div class="blog-posts single-post">
                    <article class="post clearfix mb-0">                        
                        <div class="entry-title pt-10 pl-15 text-justify">
                            <h2>
                                <%= link_to @about_us.name, erp_hcmut.about_us_path, title: '', class: 'text-uppercase' %>
                            </h2>
                        </div>
                        <% if @about_us.image.present? %>
                            <div class="entry-header">
                                <div class="post-thumb thumb">
                                    <%= link_to image_tag(@about_us.image, alt: @about_us.name), class: "img-responsive img-fullwidth" %>
                                </div>
                            </div>
                        <% end %>
                        <div class="entry-content mt-10 text-justify">
                            <%= @about_us.content.html_safe %>
                        </div>
                    </article>
                </div>
            </div>
        </div>
    </div>
</section>

