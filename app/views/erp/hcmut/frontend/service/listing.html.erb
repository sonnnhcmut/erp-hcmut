<!-- Section: inner-header -->
<section class="inner-header divider parallax layer-overlay overlay-dark-5" data-bg-img="/hcmut/images/bg/slide1.jpg">
    <div class="container pt-70 pb-20">
        <!-- Section Content -->
        <div class="section-content">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="title text-white">DỊCH VỤ</h1>
                    <ol class="breadcrumb text-left text-black mt-10">
                        <li><%= link_to 'Trang Chủ', erp_hcmut.root_path %></li>
                        <li class="active text-gray-silver">Dịch Vụ</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Section: Services -->
<section class="">
    <div class="container">
        <div class="section-content">
            <div class="row">
                <% Erp::Finances::Service.get_services.each do |service| %>
                <div class="col-md-4 col-sm-6">
                    <div class="project mb-20">
                        <div class="thumb">
                            <%= image_tag service.image_url.home, alt: service.get_name, class: 'img-fullwidth' %>
                            <div class="hover-link">
                                <%= link_to '<i class="fa fa-arrows"></i>'.html_safe,
                                            service_link(service), title: 'Xem Chi Tiết Dịch Vụ: ' + service.get_name %>
                            </div>
                        </div>
                        <h3 class="text-theme-colored"><%= link_to service.get_name, service_link(service), title: service.get_name %></h3>
                        <p class="text-justify"><%= truncate(service.description, length: 150) %></p>
                        <%= link_to 'XEM CHI TIẾT', service_link(service), title: service.get_name, class: 'btn btn-sm btn-theme-colored2 text-white' %>
                    </div>
                </div>
                <% end %>
            </div>
        </div>
    </div>
</section>