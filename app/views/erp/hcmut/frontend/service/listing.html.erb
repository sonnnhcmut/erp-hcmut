<!-- Section: inner-header -->
<section class="inner-header divider parallax layer-overlay overlay-dark-5" data-bg-img="/hcmut/images/bg/slide1.jpg">
    <div class="container pt-70 pb-20">
        <!-- Section Content -->
        <div class="section-content">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="title text-white">DỊCH VỤ</h1>
                    <ol class="breadcrumb text-left text-black mt-10">
                        <li><%= link_to 'Trang Chủ', erp_hcmut.root_path %></li>
                        <li class="active text-gray-silver">Dịch Vụ</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Section: Services -->
<section class="">
    <div class="container">
        <div class="section-content">
            <div class="row">
                <% (0..5).each do |service| %>
                <div class="col-md-4 col-sm-6">
                    <div class="project mb-20">
                        <div class="thumb">
                            <%= image_tag '/hcmut/images/about/1.jpg', alt: '', class: 'img-fullwidth' %>
                            <div class="hover-link">
                                <%= link_to '<i class="fa fa-arrows"></i>'.html_safe,
                                            erp_hcmut.service_detail_path, title: 'Xem chi tiết dịch vụ' %>
                            </div>
                        </div>
                        <h3 class="text-theme-colored">Báo Cáo Tài Chính</h3>
                        <p class="text-justify">Quý khách hàng đang lo lắng, không tin tưởng và không yên tâm về họat động của phòng kế toán, bộ phận dịch vụ kế toán trọn gói, nhân viên kế toán của chính công ty mình?</p>
                        <%= link_to 'XEM CHI TIẾT', erp_hcmut.service_detail_path, title: '', class: 'btn btn-sm btn-theme-colored2 text-white' %>
                    </div>
                </div>
                <% end %>
            </div>
        </div>
    </div>
</section>