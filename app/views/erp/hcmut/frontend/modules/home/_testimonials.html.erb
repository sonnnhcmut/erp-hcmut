<% if Erp::Testimonials::Testimonial.count > 0 %>
<div class="container pb-50">
    <div class="section-title text-center">
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                <h2 class="text-uppercase line-bottom-double-line-centered text-white mt-0">Đánh Giá Từ <span class="text-theme-colored2">Khách Hàng</span></h2>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 mb-10">
            <div class="owl-carousel-2col" data-dots="true">
                <% Erp::Testimonials::Testimonial.order("created_at DESC").each do |testimonial| %>
                    <div class="item">
                        <div class="testimonial pt-10">
                            <div class="thumb pull-left mb-0 mr-0 pr-20">
                                <%= image_tag testimonial.logo.large, width: '75', alt: '', class: 'img-thumbnail' %>
                            </div>
                            <div class="ml-100 ">
                                <p class="text-white mt-0 text-justify"><%= testimonial.content %></p>
                                <p class="author mt-10">- <span class="text-theme-colored2"><%= testimonial.author %>,</span> <small><em class="text-gray-lightgray"><%= testimonial.workplace %></em></small></p>
                            </div>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>
<% end %>