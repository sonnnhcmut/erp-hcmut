<!-- Section: inner-header -->
<section class="inner-header divider parallax layer-overlay overlay-dark-5" data-bg-img="/hcmut/images/bg/slide1.jpg">
    <div class="container pt-70 pb-20">
        <!-- Section Content -->
        <div class="section-content">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="title text-white">ĐĂNG NHẬP TÀI KHOẢN</h1>
                    <ol class="breadcrumb text-left text-black mt-10">
                        <li><%= link_to 'Trang Chủ', erp_hcmut.root_path %></li>
                        <li class="active text-gray-silver">Đăng Nhập Tài Khoản</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</section>

<section>
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="tab-content bg-silver-light">
                    <div class="tab-pane fade in active p-15" id="login-tab">
                        <h3 class="text-theme-colored mt-0 pt-5"> ĐĂNG NHẬP TÀI KHOẢN</h3>
                        <hr>
                        <p>Bạn vui lòng nhập email đăng ký và mật khẩu để đăng nhập.</p>
                        <form name="login-form" class="clearfix">
                            <div class="row">
                                <div class="form-group col-md-12">
                                    <label for="form_username_email">Email <span class="required">*</span></label>
                                    <input id="form_username_email" name="form_username_email" class="form-control" type="text">
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-12">
                                    <label for="form_password">Mật khẩu <span class="required">*</span></label>
                                    <input id="form_password" name="form_password" class="form-control" type="text">
                                </div>
                            </div>
                            <div class="form-group pull-left mt-10">
                                <button type="submit" class="btn btn-dark btn-sm">ĐĂNG NHẬP</button>
                            </div>
                        </form>
                    </div>                    
                </div>
            </div>
            <div class="col-md-4">
                <%= image_tag '/hcmut/images/team/1.png', alt: '', class: 'img-fullwidth' %>
            </div>
        </div>
    </div>
</section>

<!-- Divider: Clients -->
<section class="clients bg-theme-colored2">
    <%= render "erp/hcmut/frontend/modules/home/clients" %>
</section>