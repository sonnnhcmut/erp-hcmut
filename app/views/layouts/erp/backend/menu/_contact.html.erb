<% if (can? :view, Erp::Contacts::Contact) || (can? :view, Erp::Contacts::Message) %>
<li class="nav-item <%= "active open" if ["erp/contacts/backend/contacts",
                                          "erp/contacts/backend/messages"].include?(params[:controller]) %>">
    <a href="javascript:;" class="nav-link nav-toggle">
        <i class="fa fa-book"></i>
        <span class="title">Quản lý danh bạ</span>
        <% if ["erp/contacts/backend/contacts",
               "erp/contacts/backend/messages"].include?(params[:controller]) %>
            <span class="selected"></span>
            <span class="arrow open"></span>
        <% else %>
            <span class="arrow"></span>
        <% end %>
    </a>
    <ul class="sub-menu">
        <% if (can? :view, Erp::Contacts::Message) %>
        <li class="nav-item <%= "active open" if ["erp/contacts/backend/messages"].include?(params[:controller]) %>">
            <a href="<%= erp_contacts.backend_messages_path %>" class="nav-link ">
                <span class="title">Lời nhắn</span>
                <% if ["erp/contacts/backend/messages"].include?(params[:controller]) %>
                <span class="selected"></span>
                <% end %>
            </a>
        </li>
        <% end %>
    </ul>
</li>
<% end %>