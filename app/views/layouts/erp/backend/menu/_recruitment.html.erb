<% if (can? :view, Erp::Recruitments::Recruitment) %>
<li class="nav-item  <%= "active open" if (params[:controller] == "erp/recruitments/backend/recruitments") %>">
    <a href="javascript:;" class="nav-link nav-toggle">
        <i class="fa fa-users"></i>
        <span class="title">Tuyển dụng</span>
        <% if (params[:controller] == "erp/recruitments/backend/recruitments") %>
            <span class="selected"></span>
            <span class="arrow open"></span>
        <% else %>
            <span class="arrow"></span>
        <% end %>
    </a>
    <ul class="sub-menu">
        <li class="nav-item <%= "active open" if ["erp/recruitments/backend/recruitments"].include?(params[:controller]) %>">
            <a href="<%= erp_recruitments.backend_recruitments_path %>" class="nav-link ">
                <span class="title">Quản lý tuyển dụng</span>
                <% if ["erp/recruitments/backend/recruitments"].include?(params[:controller]) %>
                <span class="selected"></span>
                <% end %>
